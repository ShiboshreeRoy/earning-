<div class="container h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-sm">
  <h2 class="text-3xl font-bold mb-6 text-gray-800 text-center">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "space-y-6 max-w-md mx-auto") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
  
    <!-- New Password -->
    <div class="field">
      <label for="password" class="block text-sm font-semibold text-gray-700 mb-1">
        <i class="fas fa-lock mr-2 text-gray-500"></i> New password
      </label>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mb-1">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  
    <!-- Confirm New Password -->
    <div class="field">
      <label for="password_confirmation" class="block text-sm font-semibold text-gray-700 mb-1">
        <i class="fas fa-lock mr-2 text-gray-500"></i> Confirm new password
      </label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  
    <!-- Submit -->
    <div class="actions">
      <%= f.submit "Change my password", class: "w-full py-2 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>
  
  <!-- Links -->
  <%= render "devise/shared/links", class: "mt-4 text-sm text-center text-blue-600 hover:underline" %>
  
  </div>
  </div>