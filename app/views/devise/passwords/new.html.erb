<div class="container h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-sm">
  <h2 class="text-3xl font-bold mb-6 text-gray-800 text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "space-y-6 max-w-md mx-auto") do |f| %>
    <!-- Error Messages -->
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <!-- Email Field with Icon -->
    <div class="field">
      <label for="email" class="block text-sm font-semibold text-gray-700 flex items-center">
        <i class="fas fa-envelope text-gray-500 mr-3"></i>
        Email
      </label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  
    <!-- Submit Button -->
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "w-full py-2 px-4 mt-3 bg-blue-600 text-white rounded-md hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>
  
  <!-- Links Section -->
  <%= render "devise/shared/links", class: "mt-4 text-sm text-center text-blue-600 hover:underline" %>
  
  </div>
  </div>