<div class="container h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-sm">
<h2 class="text-3xl font-bold mb-6 text-gray-800 text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6 max-w-md mx-auto") do |f| %>
  <!-- Error Messages -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email Field with Icon -->
  <div class="field">
    <label for="email" class="block text-sm font-semibold text-gray-700 flex items-center">
      <i class="fas fa-envelope text-gray-500 mr-3"></i>
      Email
    </label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- Password Field with Icon -->
  <div class="field">
    <label for="password" class="block text-sm font-semibold text-gray-700 flex items-center">
      <i class="fas fa-lock text-gray-500 mr-3"></i>
      Password
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500 ml-2">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </label>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- Password Confirmation with Icon -->
  <div class="field">
    <label for="password_confirmation" class="block text-sm font-semibold text-gray-700 flex items-center">
      <i class="fas fa-lock text-gray-500 mr-3"></i>
      Confirm Password
    </label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <!-- Submit Button -->
  <div class="actions">
    <%= f.submit "Sign up", class: "w-full py-2 px-4 bg-blue-600 text-white rounded-md hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 mt-3 " %>
  </div>
<% end %>

<!-- Links (login, terms, etc.) -->
<%= render "devise/shared/links", class: "mt-4 text-sm text-center text-blue-600 hover:underline" %>

<!-- Optional Social Media Buttons (Optional for Real-World Use) -->
<div class="flex justify-center space-x-4 mt-6">
  <%= link_to '#', class: "flex items-center gap-2 bg-gray-800 text-white rounded-md px-4 py-2" do %>
    <i class="fab fa-facebook-f"></i> Facebook
  <% end %>
  <%= link_to '#', class: "flex items-center gap-2 bg-blue-600 text-white rounded-md px-4 py-2" do %>
    <i class="fab fa-twitter"></i> Twitter
  <% end %>
</div>
</div>
</div