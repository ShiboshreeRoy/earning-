<%= form_with(model: income, class: "max-w-lg mx-auto bg-white shadow-md rounded-xl p-6 space-y-6") do |form| %>
  <% if income.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded-md">
      <h2 class="font-semibold mb-2">
        <%= pluralize(income.errors.count, "error") %> prohibited this income from being saved:
      </h2>
      <ul class="list-disc ml-6 text-sm">
        <% income.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title Field -->
  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title,
      class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 text-gray-900 #{income.errors[:title].any? ? 'border-red-400 focus:ring-red-500' : 'border-gray-300 focus:ring-blue-500'}" %>
  </div>

  <!-- Amount Field -->
  <div>
    <%= form.label :amount, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :amount,
      class: "block w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring-2 text-gray-900 #{income.errors[:amount].any? ? 'border-red-400 focus:ring-red-500' : 'border-gray-300 focus:ring-blue-500'}" %>
  </div>

  <!-- Submit -->
  <div class="pt-4">
    <%= form.submit income.new_record? ? "Add Income" : "Update Income",
      class: "w-full sm:w-auto bg-blue-600 hover:bg-blue-500 text-white font-semibold px-4 py-2 rounded-md shadow" %>
  </div>
<% end %>
