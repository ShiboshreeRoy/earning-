<div id="<%= dom_id income %>" class="w-full sm:max-w-md bg-white shadow rounded-xl p-5 my-5 space-y-4 border border-gray-200">
  <div class="flex items-center gap-2">
    <i data-lucide="badge-dollar-sign" class="w-5 h-5 text-green-500"></i>
    <div>
      <strong class="block text-sm font-semibold text-gray-700">Title</strong>
      <p class="text-gray-800"><%= income.title %></p>
    </div>
  </div>

  <div class="flex items-center gap-2">
    <i data-lucide="dollar-sign" class="w-5 h-5 text-blue-500"></i>
    <div>
      <strong class="block text-sm font-semibold text-gray-700">Amount</strong>
      <p class="text-gray-800">$<%= number_to_currency(income.amount, unit: '', precision: 2) %></p>
    </div>
  </div>

  <div class="flex items-center gap-2">
    <i data-lucide="user" class="w-5 h-5 text-purple-500"></i>
    <div>
      <strong class="block text-sm font-semibold text-gray-700">User Email</strong>
      <p class="text-gray-800"><%= current_user.email %></p>
    </div>
  </div>
</div>
