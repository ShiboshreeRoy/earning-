<% content_for :title, "New Income" %>

<div class="max-w-2xl mx-auto mt-10 bg-white shadow-md rounded-xl p-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 flex items-center gap-2">
    <i data-lucide="plus-circle" class="w-6 h-6 text-blue-600"></i>
    New Income
  </h1>

  <!-- Form Partial -->
  <%= render "form", income: @income %>

  <!-- Back Link -->
  <div class="mt-6">
    <%= link_to incomes_path, class: "flex items-center gap-2 text-center rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium w-fit" do %>
      <i data-lucide="arrow-left" class="w-4 h-4"></i>
      Back to incomes
    <% end %>
  </div>
</div>
