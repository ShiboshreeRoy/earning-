<% content_for :title, "Showing Income" %>

<div class="max-w-2xl mx-auto mt-10 bg-white shadow-md rounded-xl p-6">
  <% if notice.present? %>
    <p id="notice" class="mb-5 px-4 py-3 text-green-700 bg-green-50 border border-green-200 rounded-md font-medium">
      <%= notice %>
    </p>
  <% end %>

  <!-- Header -->
  <h1 class="text-3xl font-bold text-gray-800 mb-6 flex items-center gap-2">
    <i data-lucide="eye" class="w-6 h-6 text-blue-600"></i>
    Showing Income
  </h1>

  <!-- Income Details -->
  <div class="space-y-4 mb-6">
    <%= render @income %>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-col sm:flex-row gap-3">
  <% if @income.user.email == current_user.email %>
    <%= link_to edit_income_path(@income), class: "flex items-center gap-2 px-4 py-2 rounded-md bg-yellow-500 hover:bg-yellow-400 text-white font-medium" do %>
      <i data-lucide="pencil" class="w-4 h-4"></i>
      Edit this income
    <% end %>

   
     <%= button_to @income, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "flex items-center gap-2 px-4 py-2 rounded-md bg-red-600 hover:bg-red-500 text-white font-medium" do %>
      <i data-lucide="trash" class="w-4 h-4"></i>
      Destroy this income
    <% end %>
    <% else %>
    <%= link_to incomes_path, class: "flex items-center gap-2 px-4 py-2 rounded-md bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium" do %>
      <i data-lucide="arrow-left" class="w-4 h-4"></i>
      Back to incomes
    <% end %>
    <% end %>
  </div>
</div>
